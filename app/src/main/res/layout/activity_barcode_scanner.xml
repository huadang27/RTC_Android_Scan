<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Main.Main.tcp_ip.BarcodeScannerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/ic_back"/>
    <TextView
        android:id="@+id/textViewBarcodeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Mã Vạch: "
        android:layout_gravity="left"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/listViewScannedResults"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/textViewBarcodeData" />

    <Button
        android:id="@+id/buttonScanPhysical"
        android:layout_width="210px"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewScannedResults"
        android:text="Quét" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
    <Button
        android:id="@+id/buttonClearList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5px"
        android:text="Xoá" />

    <Button
        android:id="@+id/buttonOpenNetworkConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55px"
        android:layout_below="@+id/buttonScanPhysical"
        android:text="network" />
    </LinearLayout>
